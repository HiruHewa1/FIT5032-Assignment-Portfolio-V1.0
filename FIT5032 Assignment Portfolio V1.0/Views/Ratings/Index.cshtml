@model FIT5032_Assignment_Portfolio_V1._0.Models.Rating
@{
    ViewBag.Title = "Rating";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rating</h2>

<form action="/Rating/Submit" method="post">
    <label>Rate:</label>
    @for (int i = 1; i <= 5; i++)
    {
        <input type="radio" name="Value" value="@i" required> @i
    }
    <br />
    <label>Comment:</label>
    <textarea name="Comment"></textarea>
    <br />
    <button type="submit">Submit Rating</button>
</form>